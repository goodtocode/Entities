<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AspNetCoreHostingDto>InProcess</AspNetCoreHostingDto>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Pages\Person\Create.cshtml.cs" />
    <Compile Remove="Pages\Person\Delete.cshtml.cs" />
    <Compile Remove="Pages\Person\Update.cshtml.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Pages\Person\Create.cshtml" />
    <Content Remove="Pages\Person\Delete.cshtml" />
    <Content Remove="Pages\Person\Update.cshtml" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="GoodToCode.Entity.Abstractions" Version="4.18.19252.4" />
    <PackageReference Include="GoodToCode.Entity.Dto" Version="4.18.19252.4" />
    <PackageReference Include="GoodToCode.Extensions" Version="4.18.19251.1" />
    <PackageReference Include="GoodToCode.Framework.Abstractions" Version="4.18.19250.6" />
